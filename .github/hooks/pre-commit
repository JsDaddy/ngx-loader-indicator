#!/bin/bash

set -e

bun run lint-staged
bun run lint

# bun run snyk:test

output=$(bun run type-coverage)
if echo "$output" | grep -q "lower than "; then
    echo "$output"
    exit 1  # Terminate the hook script with a non-zero exit code
else
    echo "Type coverage is good! ğŸ‰"
fi

bun run test

bun run build

bun run build:lib

