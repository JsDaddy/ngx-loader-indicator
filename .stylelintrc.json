{
    "extends": ["stylelint-config-recommended-scss"],
    "customSyntax": "postcss-scss",
    "plugins": ["stylelint-prettier"],
    "rules": {
        "prettier/prettier": true,
        "selector-type-no-unknown": [
            true,
            {
                "ignoreTypes": ["/^mat-/", "markdown", ":host", ":root"]
            }
        ]
    }
}
